/* ==========================================================================
   -- Contato | 1200px
   ========================================================================== */

section#contato
	.content
		width 1000px
		padding 60px 0
		margin 0 auto

		h3
			font-size 24px
			line-height 28px
			margin-bottom 30px

		form
			input
			select
			textarea
				height 36px
				line-height 36px
				font-size 22px
				padding 0 10px
				margin 0 0 15px 0

			textarea
				height (36px*4)

			fieldset.left
				padding-right 15px

			fieldset.right
				padding-left 15px

			.bottom
				.left
					span:nth-of-type(1)
					span:nth-of-type(2)
						font-size 22px
						line-height 28px

				.right
					.button_wrapper
						margin-top 30px
						padding 14px 34px
						border-width 3px

						a
							margin-top 0
							padding 0

							span
								font-size 24px
								margin-right 10px

							i
								font-size 20px

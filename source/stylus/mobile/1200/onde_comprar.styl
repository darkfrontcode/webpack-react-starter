/* ==========================================================================
   -- Onde Comprar | 1200px
   ========================================================================== */

section#onde_comprar
	.intro
		height 360px

		.intro_wrapper
			box-sizing()
			width 1000px
			padding-top 100px

			.left
			.right
				width 50%
				padding 0

				h3
					font-size 24px
					margin-bottom 23px

				p
					font-size 16px
					margin-bottom 30px

					span
						font-size 20px
						line-height 25px

				form
					width 100%
					display table

					fieldset
						margin-bottom 10px

						select
							height 36px
							line-height 36px
							font-size 22px
							padding 0 12px

					fieldset:nth-of-type(odd)
						padding-right 5px

					fieldset:nth-of-type(even)
						padding-left 5px

			.left
				padding-right 30px

			.right
				padding-left 30px

	.results
		.content
			width 1000px
			padding 60px 0 0 0
			margin auto

			h3
				font-size 24px
				margin-bottom 16px

			p
				font-size 22px
				line-height 28px

			ul
				margin-bottom 0

				li
					margin-bottom 30px

					p
						font-size 22px
						line-height 28px

						span
							font-size 22px
							line-height 28px
							margin-bottom 10px

				li:nth-of-type(odd)
					padding-right 30px

				li:nth-of-type(even)
					padding-left 30px

	.loja_online
		.content
			width 1000px
			margin 0 auto
			padding 60px 0

			h3
				font-size 24px
				margin-bottom 16px

			p
				font-size 22px
				line-height 28px
				margin-bottom 40px

			ul
				li
					width 240px
					height (240px/1.5)
					margin-right 13px
					margin-bottom 13px

					a.wrapper
						width @width
						height @height

				li:nth-of-type(3n)
					margin-right 13px

				li:nth-of-type(4n)
					margin-right 0

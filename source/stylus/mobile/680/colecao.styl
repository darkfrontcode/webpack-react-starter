/* ==========================================================================
   -- Collection | 680px
   ========================================================================== */

section#colecao 
	.intro
		height 160px
		
		.left
			width 100%
			height 100%

		.right
			position absolute
			z-index 2
			width 100%
			height @height
			background-color alpha(dark_blue, 0.8)
			
			.wrapper
				width 100vw
				height @height
				
				h2
					color light_blue
					font-size 30px
					line-height normal
					
				span
					font-size 18px
					line-height normal
					
	ul.category_list 
		li
			width 50%
			height 160px
			
			a
				width 100%
				height @height
				
				.details
					width 100%
					height @height
					
					.wrapper
						width 50vw
						height @height
						
						span:nth-of-type(1) 
						span:nth-of-type(2)
							span
								font-size 18px
								line-height normal
							

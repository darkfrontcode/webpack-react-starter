/* ==========================================================================
   -- Home | 680px
   ========================================================================== */

section#home
	.intro_banner
		.top
			height auto

			.right
				float right
				width 100%
				height 320px

				#banner_three
					ul
						li
							.wrapper
								width 100vw
								height 320px

							span
								font-size 24px
								line-height 26px

							.button_wrapper
								a
									margin 0
									padding 0
									border 0

									span
										font-size 18px
										line-height normal
										margin-right 10px

									i
										font-size 20px
										line-height normal

			.left
				float right
				width 100%
				height 160px

				#banner_one
				#banner_two
					width 50%
					height 100%
					float left

					ul
						li
							.wrapper
								width 50vw
								height 160px
								padding 0 20px

								span
									font-size 15px
									line-height normal

		.bottom
			width 100%
			height 318px

			#banner_four
				width 100%
				height 318px

				ul
					overflow hidden

					li
						.text_box_wrapper
							width 100%
							height 318px

							.text_box
								width 100vw
								height 318px
								left -1px

								span:nth-of-type(1)
									font-size 33px

								span:nth-of-type(2)
									font-size 67px

								.button_wrapper
									margin-top 18px

									a
										margin 0
										padding 0
										border 0

										span
											font-size 18px
											line-height normal
											margin-right 10px

										i
											font-size 20px
											line-height normal

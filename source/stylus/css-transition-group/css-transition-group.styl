/* ==========================================================================
   -- CSSTransitionGroup
   ========================================================================== */

.page-transition-enter
	transition all .3s
	opacity 0
	position absolute
	width 100%

.page-transition-enter.page-transition-enter-active
	opacity 1
	width 100%

.page-transition-leave
	transition all .3s
	opacity 1
	position absolute
	width 100%

.page-transition-leave.page-transition-leave-active
	opacity 0
	width 100%